@model ResumeData

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recruterra - Настройки</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/erik.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/images/recruterra.png" />
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/script.js" charset="utf-8"></script>
</head>
<body>
    <main>
        <header>
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/Home/Index/@Model.User.Id">Recruterra</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Index/@Model.User.Id">Сводка</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Vacancy/@Model.User.Id">Вакансии</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Meeting/@Model.User.Id">Встречи</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Resume/@Model.User.Id">Базы резюме</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Article/@Model.User.Id">Сообщество</a>
                    </li>
                </ul>
                <div class="text-end">
                    @if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id) == null)
                    {
                        <a class="btn btn-outline-dark me-2" href="/Home/Signin">Войти</a>
                    }
                    else if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Auth == 0)
                    {
                        <a class="btn btn-outline-dark me-2" href="/Home/Signin">Войти</a>
                    }
                    else if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Auth == 1)
                    {
                        <a class="font16 mrright16" href="/Home/Account/@Model.User.Id" name="">@Model.User.Login</a>
                        <a class="font16 mrright16" href="/Home/Account/@Model.User.Id" name="">@Model.User.Role</a>
                        <input type="button" class="btn btn-outline-dark me-2" onclick="UpdateAccount('@Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Id')" value="Выйти" />
                    }
                </div>
            </nav>
        </header>

        <div class="container">
            <div class="leftbarvacancy mrleft256">
                <p class="color-bububu mrtop32 font-bold font20">Настройки пользователя</p>

                <p class="color-bububu mrtop32 font-bolder font16">Выберите нужное</p>
                <fieldset id="class1">
                    @{if (Model.User.Role == "Соискатель")
                        {
                            <div class="form-check mrtop16">
                                <a href="/Home/Account/@Model.User.Id" class="font16" style="cursor: pointer"><label class="form-check-label mrtop3 cursor-pointer hover-underline">• Основная информация</label></a>
                            </div>
                            <div class="form-check">
                                <a href="/Print/Myresume/@Model.User.Id" class="font16" style="cursor: pointer"><label class="form-check-label mrtop3 cursor-pointer hover-underline">• Резюме</label></a>
                            </div>
                            <div class="form-check">
                                <a href="/ResponsesToVacancies/Responses/@Model.User.Id" class="font16" style="cursor: pointer"><label class="form-check-label mrtop3 cursor-pointer hover-underline">• Отклики</label></a>
                            </div>
                        }}
                </fieldset>
            </div>

            <div class="rightbarvacancy w-100px">
                <div class="accback mrtop32 mrleft128">
                    <form asp-action="Upld" enctype="multipart/form-data">
                        <table class="display-flex">
                            <tbody class="mrleft32">
                                <tr class="display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="photo" class="font-bolder mrtop32">Фотография</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <img src="~/images/@{@Model.User.Id}.png" class="accimg mrtop32" alt="">
                                        <input asp-for="ResumeId" value="@Model.User.Id" hidden="hidden">
                                        <div class="mrtop8 mrbottom8 w-96">
                                            <input asp-for="ProfileImage" class="form-control" accept="image/png" />
                                            <span asp-validation-for="ProfileImage" class=""></span>
                                        </div>
                                        <div class="fieldvacancy">
                                            <input type="submit" value="Сохранить" class="btn btn-outline-dark w-174" />
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                    <form id="stripe-login" method="post" enctype="multipart/form-data">
                        <table class="display-flex">
                            <tbody class="mrleft32">
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="postcode" class="font-bolder">Почтовый<br>индекс</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="postcode" placeholder="420140" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Postcode">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="street" class="font-bolder">Улица</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="street" placeholder="Пушкина" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Street">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="house" class="font-bolder">Дом</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="house" placeholder="3" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).House">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="apartment" class="font-bolder">Квартира</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="apartment" placeholder="185" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Apartment">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="position" class="font-bolder">Рассчитываемая<br>должность</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="position" placeholder="Python программист" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Position">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="salary" class="font-bolder">Рассчитываемая<br>з/п</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="salary" placeholder="40000" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Salary">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="edu" class="font-bolder">Образование</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            @{var edu = Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).Education; }
                                            <select id="edu">
                                                @if (edu == "Высшее")
                                                {
                                                    <option value="Высшее" selected>Высшее</option>
                                                    <option value="Среднее профессиональное">Среднее профессиональное</option>
                                                    <option value="Среднее общее">Среднее общее</option>
                                                    <option value="Основное общее">Основное общее</option>
                                                }
                                                else if (edu == "Среднее профессиональное")
                                                {
                                                    <option value="Высшее">Высшее</option>
                                                    <option value="Среднее профессиональное" selected>Среднее профессиональное</option>
                                                    <option value="Среднее общее">Среднее общее</option>
                                                    <option value="Основное общее">Основное общее</option>
                                                }
                                                else if (edu == "Среднее общее")
                                                {
                                                    <option value="Высшее">Высшее</option>
                                                    <option value="Среднее профессиональное">Среднее профессиональное</option>
                                                    <option value="Среднее общее" selected>Среднее общее</option>
                                                    <option value="Основное общее">Основное общее</option>
                                                }
                                                else if (edu == "Основное общее")
                                                {
                                                    <option value="Высшее">Высшее</option>
                                                    <option value="Среднее профессиональное">Среднее профессиональное</option>
                                                    <option value="Среднее общее">Среднее общее</option>
                                                    <option value="Основное общее" selected>Основное общее</option>
                                                }
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="university" class="font-bolder">Учебное<br>заведение</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="university" placeholder="КНИТУ-КАИ" value="@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).University">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="workex" class="font-bolder">Опыт<br>работы</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            @{var work = Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).WorkExperience; }
                                            <select id="workex">
                                                @if (work == 0)
                                                {
                                                    <option value="0" selected>Без опыта</option>
                                                    <option value="1">1 год</option>
                                                    <option value="2">2 года</option>
                                                    <option value="3">3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5">5 лет</option>
                                                }
                                                else if (work == 1)
                                                {
                                                    <option value="0">Без опыта</option>
                                                    <option value="1" selected>1 год</option>
                                                    <option value="2">2 года</option>
                                                    <option value="3">3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5">5 лет</option>
                                                }
                                                else if (work == 2)
                                                {
                                                    <option value="0">Без опыта</option>
                                                    <option value="1">1 год</option>
                                                    <option value="2" selected>2 года</option>
                                                    <option value="3">3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5">5 лет</option>
                                                }
                                                else if (work == 3)
                                                {
                                                    <option value="0">Без опыта</option>
                                                    <option value="1">1 год</option>
                                                    <option value="2">2 года</option>
                                                    <option value="3" selected>3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5">5 лет</option>
                                                }
                                                else if (work == 4)
                                                {
                                                    <option value="0">Без опыта</option>
                                                    <option value="1">1 год</option>
                                                    <option value="2">2 года</option>
                                                    <option value="3">3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5">5 лет</option>
                                                }
                                                else if (work == 5)
                                                {
                                                    <option value="0">Без опыта</option>
                                                    <option value="1">1 год</option>
                                                    <option value="2">2 года</option>
                                                    <option value="3">3 года</option>
                                                    <option value="4">4 года</option>
                                                    <option value="5" selected>5 лет</option>
                                                }
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="typeofemp" class="font-bolder">Тип<br>занятости</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            <input type="text" class="w-95" id="typeofemp" placeholder="Полная занятость" value="@Model.TypeOfEmployments.FirstOrDefault(type => type.Id == Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).IdTypeOfEmployment).Type">
                                        </div>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="additionalinformation" class="font-bolder">Доп.<br>информация</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <textarea id="additionalinformation" placeholder="Профессиональные навыки:— опыт работы в ...">@Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).AdditionalInformation</textarea>
                                    </td>
                                </tr>
                                <tr class="mrtop32 display-flex">
                                    <td width="150" class="leftaddvacancy">
                                        <label for="itspublic" class="font-bolder">Публично</label>
                                    </td>
                                    <td width="400" class="rightaddvacancy">
                                        <div class="fieldvacancy">
                                            @{ var itspublic = Model.Resumes.FirstOrDefault(resume => resume.Id == Model.User.Id).ItsPublic; }
                                            <select id="itspublic">
                                                @if (itspublic == true)
                                                {
                                                    <option value="true" selected>Публично</option>
                                                    <option value="false">Непублично</option>
                                                }
                                                else if (itspublic == false)
                                                {
                                                    <option value="true">Публично</option>
                                                    <option value="false" selected>Непублично</option>
                                                }
                                            </select>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btneditresume mrtop32 mrleft110">
                            <div class="display-flex">
                                <input type="button" class="btn btn-outline-dark mrright16 w-174 mrbottom32" onclick="UpdateProfileResumePage('@Model.User.Id', this.form.postcode.value, this.form.street.value, this.form.house.value, this.form.apartment.value, this.form.position.value, this.form.salary.value, this.form.edu.value, this.form.university.value, this.form.workex.value, this.form.typeofemp.value, this.form.additionalinformation.value, this.form.itspublic.value)" value="Обновить" />
                                <a href="@Url.RouteUrl("printseekerresume", new { controller = "Print", action = "PrintResume", seekerId = Model.User.Id})"><input type="button" class="btn btn-outline-dark mrleft16 w-174 mrbottom32" value="Печать" /></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <footer class="backwhite">
            <div class="firstline">
                <div class="aboutus mrtop32">
                    <div class="aboutuss">
                        <a href="#" class="font16 fontbold">О нас</a>
                    </div>
                    <div class="aboutuscontext">
                        <a href="#" class="font16 fontregular">О сервисе</a> <br><br>
                        <a href="#" class="font16 fontregular">Пользовательское соглашение</a> <br><br>
                        <a href="#" class="font16 fontregular">Политика конфиденциальности</a> <br><br>
                    </div>
                </div>

                <div class="support mrtop32">
                    <div class="supportt">
                        <a href="" class="font16 fontbold">Поддержка</a>
                    </div>
                    <div class="devicescontext">
                        <a href="#" class="font16 fontregular">support@recruterra.ru</a> <br> <br>
                        <a href="#" class="font16 fontregular">8 (905) 020-99-52</a> <br><br>
                        <a href="#" class="font16 fontregular">FAQ</a> <br><br>
                    </div>
                </div>

                <div class="SocSeti mrtop32">
                    <div class="SocSetii">
                        <a href="#" class="font16 fontbold">Наши соц.сети</a>
                    </div>
                    <div class="SocSeticontext">
                        <a href="https://www.instagram.com/ar.gelick/"><img src="~/images/instagram.png" alt=""></a>
                        <a href="https://twitter.com/?lang=ru"><img src="~/images/twitter.png" alt=""></a>
                        <a href="https://www.facebook.com/"><img src="~/images/facebook.png" alt=""></a>
                        <a href="https://t.me/kurechh"><img src="~/images/telegram.png" alt=""></a>
                    </div>
                </div>
            </div>
            <div class="copy">
                <table class="iksweb">
                    <tbody>
                        <tr>
                            <td><a href="" class="font36">Recruterra</a></td>
                            <td class="copyright"><a href="" class="copyright">© 2023</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </footer>
    </main>
</body>
</html>
