@model IndexData
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recruterra - Добавление вакансии</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/erik.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/images/user.png" />
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/script.js" charset="utf-8"></script>
</head>
<body>
    <main>
        <header>
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/Home/Index/@Model.User.Id">Recruterra</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Index/@Model.User.Id">Сводка</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Vacancy/@Model.User.Id">Вакансии</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Meeting/@Model.User.Id">Встречи</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Resume/@Model.User.Id">Базы резюме</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-bold" href="/Home/Article/@Model.User.Id">Сообщество</a>
                    </li>
                </ul>
                <div class="text-end">
                    @if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id) == null)
                    {
                        <a class="btn btn-outline-dark me-2" href="/Home/Signin">Войти</a>
                    }
                    else if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Auth == 0)
                    {
                        <a class="btn btn-outline-dark me-2" href="/Home/Signin">Войти</a>
                    }
                    else if (Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Auth == 1)
                    {
                        <a class="font16 mrright16" href="/Home/Account/@Model.User.Id" name="">@Model.User.Login</a>
                        <a class="font16 mrright16" href="/Home/Account/@Model.User.Id" name="">@Model.User.Role</a>
                        <input type="button" class="btn btn-outline-dark me-2" onclick="UpdateAccount('@Model.Accounts.LastOrDefault(m => m.IdUser == Model.User.Id).Id')" value="Выйти" />
                    }
                </div>
            </nav>
        </header>

        <div class="container height950">
            <div class="rightbarvacancy">
                <div class="addvacancyback mrtop32 mrleftvacan height650 mrleft400">
                    <form id="stripe-login" method="post">
                        @{string role = Model.User.Role;
                            if (role == "Работодатель")
                            {
                                <table class="display-flex">
                                    <tbody class="mrleft32">
                                        <tr class="display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacposition" class="font-bolder mrtop32">Должность</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <div class="fieldvacancy">
                                                    <input type="text" class="w-95 mrtop32" id="vacposition" placeholder="Бариста">
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacobligations" class="font-bolder">Обязанности</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <textarea id="vacobligations" placeholder="Чем предстоит заниматься: консультировать входящих клиентов..."></textarea>
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacsalary" class="font-bolder">Заработная<br>плата (руб.)</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <div class="fieldvacancy">
                                                    <input type="text" class="w-95" id="vacsalary" placeholder="40000">
                                                </div> 
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacworkex" class="font-bolder">Опыт работы</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <select id="vacworkex">
                                                    <option value="0">Без опыта</option>
                                                    <option value="1">От 1 года</option>
                                                    <option value="2">От 2 лет</option>
                                                    <option value="3">От 3 лет</option>
                                                    <option value="4">От 4 лет</option>
                                                    <option value="5">От 5 лет</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacedu" class="font-bolder">Образование</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <select id="vacedu">
                                                    <option value="Не интересует">Не интересует</option>
                                                    <option value="Высшее">Высшее</option>
                                                    <option value="Среднее профессиональное">Среднее профессиональное</option>
                                                    <option value="Среднее общее">Среднее общее</option>
                                                    <option value="Основное общее">Основное общее</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vactypeofemp" class="font-bolder">Тип занятости</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <select id="vactypeofemp">
                                                    <option value="2">Полная занятость</option>
                                                    <option value="1">Частичная занятость</option>
                                                    <option value="4">Проектная работа</option>
                                                    <option value="3">Стажировка</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr class="mrtop32 display-flex">
                                            <td width="150" class="leftaddvacancy">
                                                <label for="vacdescrip" class="font-bolder">Описание</label>
                                            </td>
                                            <td width="400" class="rightaddvacancy">
                                                <textarea id="vacdescrip" placeholder="Условия: официальное трудоустройство..."></textarea>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="btneditacc mrtop32 mrleft2256">
                                    <input type="button" class="btn btn-outline-dark w-200" onclick="CreateVacancy(this.form.vacposition.value, this.form.vacobligations.value, this.form.vacsalary.value, this.form.vacworkex.value, this.form.vacdescrip.value, this.form.vacedu.value, this.form.vactypeofemp.value, 1, @Model.User.Id); RedirectAddVacancyToVacancy('@Model.User.Id');" value="Добавить" />
                                </div>
                            }}
                    </form>
                </div>
            </div>
        </div>

        <footer class="backwhite">
            <div class="firstline">
                <div class="aboutus mrtop32">
                    <div class="aboutuss">
                        <a href="#" class="font16 fontbold">О нас</a>
                    </div>
                    <div class="aboutuscontext">
                        <a href="#" class="font16 fontregular">О сервисе</a> <br><br>
                        <a href="#" class="font16 fontregular">Пользовательское соглашение</a> <br><br>
                        <a href="#" class="font16 fontregular">Политика конфиденциальности</a> <br><br>
                    </div>
                </div>

                <div class="support mrtop32">
                    <div class="supportt">
                        <a href="" class="font16 fontbold">Поддержка</a>
                    </div>
                    <div class="devicescontext">
                        <a href="#" class="font16 fontregular">support@recruterra.ru</a> <br> <br>
                        <a href="#" class="font16 fontregular">8 (905) 020-99-52</a> <br><br>
                        <a href="#" class="font16 fontregular">FAQ</a> <br><br>
                    </div>
                </div>

                <div class="SocSeti mrtop32">
                    <div class="SocSetii">
                        <a href="#" class="font16 fontbold">Наши соц.сети</a>
                    </div>
                    <div class="SocSeticontext">
                        <a href="https://www.instagram.com/ar.gelick/"><img src="~/images/instagram.png" alt=""></a>
                        <a href="https://twitter.com/?lang=ru"><img src="~/images/twitter.png" alt=""></a>
                        <a href="https://www.facebook.com/"><img src="~/images/facebook.png" alt=""></a>
                        <a href="https://t.me/kurechh"><img src="~/images/telegram.png" alt=""></a>
                    </div>
                </div>
            </div>
            <div class="copy">
                <table class="iksweb">
                    <tbody>
                        <tr>
                            <td><a href="" class="font36">Recruterra</a></td>
                            <td class="copyright"><a href="" class="copyright">© 2023</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </footer>
    </main>
</body>
</html>